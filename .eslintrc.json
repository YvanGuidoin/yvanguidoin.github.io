{
  "root": true,
  "ecmaFeatures": {
    "modules": true,
    "jsx": true
  },
  "parser": "babel-eslint",
  "extends": [ "eslint:recommended", "plugin:react/recommended" ],
  "plugins": [ "react" ],
  "parserOptions": {
    "ecmaFeatures": {
      "ecmaVersion": 6,
      "impliedStrict": true,
      "sourceType": "module",
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "jest": true
  },
  "rules": {
    "no-console": 1,
    "no-unused-vars": 1
  }
}
